<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name = "roundImage">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
    </style>
    <style name = "pokedexViewSize">
        <item name="android:layout_width">111dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name = "pokemonImageView" parent = "pokedexViewSize">
        <!--<item name="android:src">""</item>-->
        <item name="android:layout_height">95dp</item>
    </style>
    <style name = "pokemonTextView" parent = "pokedexViewSize">
        <item name="android:layout_height">38dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="PokedexTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cardview_light_background</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="loginButton">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">44dp</item>
    </style>
    <style name="navigationDrawer">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">44dp</item>
    </style>
</resources>
