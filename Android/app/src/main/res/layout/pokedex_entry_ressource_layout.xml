<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/pokemonSpritePokedexImageViewRessource"
        android:layout_width="111dp"
        android:layout_height="95dp"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pokemonNamePokedexRessourceTextView"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="@+id/pokemonSpritePokedexImageViewRessource"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pokemonSpritePokedexImageViewRessource"
        app:layout_constraintTop_toBottomOf="@+id/pokemonSpritePokedexImageViewRessource" />

</androidx.constraintlayout.widget.ConstraintLayout>