<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/withPokeAccount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:gravity="center"
        android:lines="2"
        android:text="@string/throughSocialNetWorksAccounts"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <Button
        android:id="@+id/connectWithPokeAccount"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="245dp"
        android:layout_marginEnd="2dp"
        android:text="@string/connectWithPokeAccount"
        app:layout_constraintEnd_toStartOf="@+id/facebookLoginButton"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <com.twitter.sdk.android.core.identity.TwitterLoginButton
        android:id="@+id/loginButtonTwitter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="67dp"
        app:layout_constraintBottom_toTopOf="@+id/facebookLoginButton"
        app:layout_constraintEnd_toEndOf="@+id/facebookLoginButton"
        app:layout_constraintStart_toStartOf="@+id/facebookLoginButton" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebookLoginButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/connectWithPokeAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/connectWithPokeAccount"
        app:layout_constraintTop_toTopOf="@+id/connectWithPokeAccount" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/googleLoginButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        app:layout_constraintEnd_toEndOf="@+id/facebookLoginButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/facebookLoginButton"
        app:layout_constraintTop_toBottomOf="@+id/facebookLoginButton" />

</androidx.constraintlayout.widget.ConstraintLayout>