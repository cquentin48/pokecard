<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ProgressBar
        android:id="@+id/pokemonSpriteLoadingProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="111dp"
        android:layout_height="95dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pokemonLoadingText"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:text="@string/singlePokemonPaginationLoadingText"
        app:layout_constraintEnd_toEndOf="@+id/pokemonSpriteLoadingProgressBar"
        app:layout_constraintStart_toStartOf="@+id/pokemonSpriteLoadingProgressBar"
        app:layout_constraintTop_toBottomOf="@+id/pokemonSpriteLoadingProgressBar" />
</androidx.constraintlayout.widget.ConstraintLayout>