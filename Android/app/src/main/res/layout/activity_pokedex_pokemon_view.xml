<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.PokedexPokemonView">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="206dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="128dp"
            tools:layout_editor_absoluteY="16dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/pokemonNameTextViewPokemoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="169dp" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        tools:layout_editor_absoluteY="205dp">

        <TextView
            android:id="@+id/pokemonNumberTextViewPokemonVirw"
            android:layout_width="366dp"
            android:layout_height="28dp"
            android:text="@string/pokedexActivityPokemonNumberText"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="1dp" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        tools:layout_editor_absoluteY="239dp">

        <TextView
            android:id="@+id/pokemonTypePokemonViewActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pokedexActivityTypesText"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/pokemonHeightPokemonView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pokedexActivityHeightText"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="35dp" />

        <TextView
            android:id="@+id/pokemonWeightPokemonView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pokedexActivityWeightText"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="54dp" />

        <TextView
            android:id="@+id/PokemonStatusPokemonView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pokedexActivityStatusText"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="73dp" />

        <TextView
            android:id="@+id/pokemonEvolutionsPokemonView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/pokedexActivityEvolutionText"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="92dp" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="147dp"
        tools:layout_editor_absoluteY="364dp">

        <TextView
            android:id="@+id/pokemonDescriptionPokemonView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PokedexActivityDescriptionTitle"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/pokedexEntryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="63dp" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>